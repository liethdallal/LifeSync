<div id="to-do-form-container">
    
    <h1 id="to-do-form-title">One-time-Purchase Form</h1>

    <% if (user) { %>

        <form action="/finance-costs/onetimepayment-form" method="post">
            <label id="task-label" for="title">Name:</label>
            <input type="text" id="task" name="name" required>
            <br>
            <label id="due-label" for="img">Cost:</label>
            <input type="text" id="due" name="cost" required>
            <br>
            <div id="to-do-form-submit-button-container">
                <button id="to-do-form-submit-button" type="submit">Submit</button>
            </div>
    
        </form> 
    
    <% } else { %>
    
        <h1 id="not-signed-in">To use LifeSync Features you need to sign in!</h1>
    
    <% } %>
    
    
</div>
    