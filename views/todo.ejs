<div id="to-do-flexbox">

    <div id="to-do-container">
        <div id="task-due-container">

            <div class="task-containers">
                <form action="/todos/todo-form" method="get">
                    <button id="add-task-button" type="submit">Add Task</button>
                </form>
            </div>
            
            <div class="task-containers">
                <h1 id="tasks-title">Tasks</h1>
            </div>

            <div class="task-containers">
                <h1 id="due-title">Due Date</h1>
            </div>
            
        </div>
        <hr id="todoline">
        <% if (user) { %>
            <% todos.forEach(todo => { %>
                <% if (todo.addedBy.toString() === currentUser._id.toString()) { %>
                    <div class="task-div">
                        <div id="edit-delete-div">
                            <form action="/todos/editform/<%= todo._id %>" method="get">
                                <div class="task-containers">
                                    <button class="edit-button" type="submit">Edit</button>
                                </div>
                            </form>
                            
                            <form action="/todos/remove/<%= todo._id %>" method="post">
                                <input type="hidden" name="_method" value="DELETE">
                                <div class="task-containers">
                                    <button class="delete-button" type="submit">Delete</button>
                                </div>
                            </form>
                        </div>

                        <div class="task-containers">
                            <h2 class="task"><%= todo.task %></h2>
                        </div>
                        <div class="task-containers">
                            <h2 class="due"><%= todo.due %></h2>
                        </div>
                    </div>
                <% } %>
            <% }); %>

        <% } else { %>
            <h1 id="not-signed-in">To use LifeSync Features you need to sign in!</h1>
        <% } %>

        <% if(user){ %>
        <% if(currentUser.lists.toDo.length ==  0){ %>
            <div class='addtask'>
                <div class="task-containers">
                    <button class="delete-button" type="submit">e.g. Delete</button>
                </div>
                <div class="task-containers">
                    <h1 class="task">"a task you would like to complete"</h1>
                </div>
                <div class="task-containers">
                    <h1 class="due">"when you want it done by in whatever format you would like!"</h1>
                </div>
            </div>
        <% } %>
            <% } %>
    </div>

</div>